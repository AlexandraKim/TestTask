@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TestTask.Application.Dtos.ProductDto

<form asp-action="ProductDelete">
  <br/>
  <div class="container border p-3">
    <h1 class="text-white text-center">Delete Product</h1>
    <input asp-for="Id" hidden/>
    <hr/>
   <div class="row">
     <div class="col-2">
       <label class="control-label pt-2" style="font-size:20px;">Title</label>
     </div>
     <div class="col-10 pb-3">
       <input class="form-control" asp-for="Title"/>
       <span asp-validation-for="Title" class="text-danger"></span>
     </div>
     <div class="col-2">
       <label class="control-label pt-2" style="font-size:20px;">Quantity</label>
     </div>
     <div class="col-10 pb-3">
       <input class="form-control" asp-for="Quantity"/>
       <span asp-validation-for="Quantity" class="text-danger"></span>
     </div>
     <div class="col-2">
       <label class="control-label pt-2" style="font-size:20px;">Price</label>
     </div>
     <div class="col-10 pb-3">
       <input class="form-control" asp-for="Price"/>
       <span asp-validation-for="Price" class="text-danger"></span>
     </div>
     <div class="col-5 offset-2">
       <a class="btn-primary btn form-control " asp-action="Index">Back to List</a>
     </div>
     <div class="col-5">
       <input type="submit" value="Delete" class="btn btn-danger form-control"/>
     </div>
   </div>
  </div>
</form>